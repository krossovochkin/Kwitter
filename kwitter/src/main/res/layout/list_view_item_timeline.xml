<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/status_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:layout_toRightOf="@+id/user_profile_image"
            android:lineSpacingMultiplier="1.1"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <!--***********************-->
    <!--*** TOOLBAR LAYOUT ****-->
    <!--***********************-->

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_marginBottom="@dimen/tweet_action_toolbar_margin"
        android:visibility="gone"
        android:layout_height="@dimen/tweet_action_button_height"
        android:layout_width="fill_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reply_button"
            android:layout_height="@dimen/tweet_action_button_height"
            android:layout_width="wrap_content"
            android:background="@drawable/reply"/>

        <Button
            android:id="@+id/retweet_button"
            android:layout_height="@dimen/tweet_action_button_height"
            android:layout_width="wrap_content"
            android:background="@drawable/retweet"/>

        <Button
            android:id="@+id/favorite_button"
            android:layout_height="@dimen/tweet_action_button_height"
            android:layout_width="wrap_content"
            android:background="@drawable/favorite"
            />
    </LinearLayout>

</LinearLayout>